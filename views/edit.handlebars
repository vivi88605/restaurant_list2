<div class="container my-4">
  <h1>餐廳資訊</h1>
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">店名<span class="text-danger">*</span></span>
      <input type="text" class="form-control" name="name" value="{{restaurant.name}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">英文店名<span class="text-danger">*</span></span>
      <input type="text" class="form-control" name="name_en" value="{{restaurant.name_en}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">類別<span class="text-danger">*</span></span>
      <input type="text" class="form-control" name="category" list="categoryOptions" value="{{restaurant.category}}"
        required>
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
      </datalist>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">圖片網址<span class="text-danger">*</span></span>
      <input type="text" class="form-control" name="image" value="{{restaurant.image}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">電話號碼<span class="text-danger">*</span></span>
      <input type="text" class="form-control" name="phone" value="{{restaurant.phone}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">地址<span class="text-danger"></span></span>
      <input type="text" class="form-control" name="location" value="{{restaurant.location}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">google地圖網址<span class="text-danger"></span></span>
      <input type="text" class="form-control" name="google_map" value="{{restaurant.google_map}}" required>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1">評價<span class="text-danger">*</span></span>
      <input type="number" class="form-control" min="0" max="5" step="0.1" name="rating" value="{{restaurant.rating}}"
        required>
    </div>
    <div class=" input-group mb-3">
      <span class="input-group-text" id="basic-addon1">描述<span class="text-danger">*</span></span>
      <textarea type="text" class="form-control" name="description" required>{{restaurant.description}}</textarea>
    </div>
    <div>
      <button type="submit" class="btn btn-primary">儲存</button>
    </div>
  </form>
</div>